<body onload="callOkta()">
    <script>
        function callOkta() {
            var signIn = new OktaSignIn({ baseUrl: 'https://dev-348986.okta.com', authParams: { issuer: 'https://dev-348986.okta.com/oauth2/aus403kadJ3g9dwDs4x6' } });
            signIn.renderEl({
                el: '#widget-container'
            }, function success(res) {
                if (res.status === 'SUCCESS') {
                    console.log('Do something with this sessionToken', res.session.token);
                    res.session.setCookieAndRedirect('http://localhost:3000/login');

                } else {
                    // The user can be in another authentication state that requires further action.
                    // For more information about these states, see:
                    //   https://github.com/okta/okta-signin-widget#rendereloptions-success-error
                }
            });
        }
    </script>
    <div id="widget-container"></div>

